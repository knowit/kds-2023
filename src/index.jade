extends layout.jade

block content
  nav.navigation
    a(href='') Top
    a(href='#practical') Practicalities
    //a(href='#cfp') Call for presentations
    a(href='#schedule') Schedule
    a(href='#talks') Talks and Speakers
    a(href='#location') Location
    a(href='#coc') Code of Conduct
  section.intro
    .wrapper
      img(src='logo/KDS symbol.svg')
      .content
        h2 By Developers,
        h2 For Developers
        p
        h3 #{event.date}<br>#{event.city}
        h5 For the 2018-program, see <a href="index_2018.html"> here.</a>        
        h5 Feel free to <a href="mailto:kds@knowit.no">contact us.</a>
      p.lead
        | Knowit Developer Summit (KDS) is Knowit's annual company-wide software developer conference.
        | The 2019 conference will be held on #{event.longDate} at the #{event.venue} in #{event.city}, #{event.country}.

  include ./includes/register.jade
  include ./includes/practical_info.jade
  
  //- include ./includes/cfp.jade

  include ./includes/schedule.jade
  include ./includes/talks.jade

  section#location.location
    .wrapper
      iframe(
        src=event.gmapsUrl
        width='100%'
        height='100%'
        frameborder='0'
        style='border:0'
      )
      .blocker
      .content
        h1 Location
        h3
          a(href=event.venueUrl)= event.venue
        h3= event.city

  include ./includes/coc.jade